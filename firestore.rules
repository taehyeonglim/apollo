rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // episodes 컬렉션
    // ============================================
    match /episodes/{episodeId} {
      // 읽기: published는 누구나, draft는 creator만
      allow read: if resource.data.status == 'published'
                  || (request.auth != null && resource.data.creatorUid == request.auth.uid);

      // 쓰기: 클라이언트 직접 쓰기 금지 (Functions Admin SDK만)
      allow create, update, delete: if false;

      // ----------------------------------------
      // comments 서브컬렉션
      // ----------------------------------------
      match /comments/{commentId} {
        // 읽기: 상위 episode가 published인 경우만
        allow read: if get(/databases/$(database)/documents/episodes/$(episodeId)).data.status == 'published';

        // 쓰기: 클라이언트 직접 쓰기 금지 (callable function 통해서만)
        allow create, update, delete: if false;
      }
    }

    // ============================================
    // characters 컬렉션 (캐릭터 시트)
    // ============================================
    match /characters/{characterId} {
      allow read: if true;
      allow write: if false; // Admin만
    }

    // ============================================
    // rateLimits 컬렉션 (Functions에서 관리)
    // ============================================
    match /rateLimits/{docId} {
      allow read, write: if false; // Functions Admin SDK만
    }

    // ============================================
    // users 컬렉션 (향후 확장용)
    // ============================================
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;

      // ----------------------------------------
      // library 서브컬렉션 (레퍼런스 이미지 메타데이터)
      // ----------------------------------------
      match /library/{imageId} {
        // 읽기: 본인만
        allow read: if request.auth != null && request.auth.uid == userId;

        // 쓰기: 본인만, 필수 필드 검증
        allow create: if request.auth != null
                      && request.auth.uid == userId
                      && request.resource.data.keys().hasAll(['name', 'storagePath', 'createdAt'])
                      && request.resource.data.name is string
                      && request.resource.data.name.size() <= 100
                      && request.resource.data.storagePath is string;

        // 수정: 본인만, name만 수정 가능
        allow update: if request.auth != null
                      && request.auth.uid == userId
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name', 'updatedAt']);

        // 삭제: 본인만
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
